# ============================================
# Application Settings
# ============================================

HOST=0.0.0.0
PORT=8000

# Environment mode (development, production)
ENVIRONMENT=production

# JWT Secret Key - Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_your_own_secret_key_here


# ============================================
# Database Settings (for external PostgreSQL)
# ============================================

DB_HOST=192.168.2.3
DB_PORT=5433
DB_NAME=searchlogs

# IMPORTANT: DB_USER and DB_PASSWORD can be URL-encoded or plain text
# The application will automatically decode URL-encoded values
#
# Examples:
# Plain text (recommended for .env):
# DB_USER=myuser
# DB_PASSWORD=mypassword!123
#
# URL-encoded (if your password has special characters):
# DB_USER=Hd4AZn%3ANlSpH
# DB_PASSWORD=8%260%2B6849Mx%23S
#
# Common URL encoding:
# : = %3A
# @ = %40
# & = %26
# + = %2B
# # = %23
# % = %25
# / = %2F

DB_USER=your_database_username
DB_PASSWORD=your_database_password

# DATABASE_URL - Optional, for SQLAlchemy (must be URL-encoded)
# Format: postgresql://username:password@host:port/database
# If your password has special characters, they MUST be URL-encoded here
DATABASE_URL=postgresql://your_database_username:your_database_password@192.168.2.3:5433/searchlogs


# ============================================
# Activity Logging
# ============================================

ENABLE_ACTIVITY_LOGGING=true
